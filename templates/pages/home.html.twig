    <div class="container">
        <h2>Les derniers biens</h2>
        <div class="row flex">
            {% for property in properties %}
                <div class="col-3">
                    <div class="card">
                        {% if property.filename %}
                            <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="Image" style="width: 100%; height: auto">
                        {% else %}
                            <img src="{{ 'images/default/empty.jpeg' | imagine_filter('thumb') }}" alt="Image par défault" style="width: 100%; height: auto">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
                            </h5>
                            <p class="card-text">{{ property.city }} {{ property.postalCode }}</p>
                            <div class="text-primary" style="font-weight: bold; font-size: 2rem;">{{ property.getFormattedPrice() }}€</div>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}